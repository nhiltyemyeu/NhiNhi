<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/he"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:background="@drawable/duongvien_goctron5">

        <TextView
            android:id="@+id/wel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wel"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/ic_baseline_email_24"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="25dp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="25dp"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="25dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/err"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass"
            android:textColor="#FF0000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/pass" />


        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass"
            android:layout_marginTop="30dp"
            android:background="@drawable/duongvien_goctron"
            android:onClick="onClick"
            android:text="LOGIN"
            android:textSize="20dp"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnlogin"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:text="Don't have on account?"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnlogin"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="-26dp"
            android:layout_toRightOf="@+id/hi"
            android:text="Sign Up"
            android:textColor="#FF0099"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>